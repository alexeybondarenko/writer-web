doctype html
html(ng-app="app")
  head(lang='en')
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')
    title Writer.io
    link(rel='stylesheet', href='css/app.css')
  body
    nav.navbar.navbar-default
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') Writer.io

        #navbar.navbar-collapse.collapse(ng-if="$root.user")
          ul.nav.navbar-nav
            li
              a Books
          hr.visible-xs
          ul.nav.navbar-nav.navbar-right
            li
              a(ui-sref="profile") {{$root.user.name}}
            li
              a(ng-click="logout()") Logout

        #navbar.navbar-collapse.collapse(ng-if="!$root.user")
          ul.nav.navbar-nav
            li
              a About us
            li
              a Contacts
          hr.visible-xs
          ul.nav.navbar-nav.navbar-right
            li
              a(ui-sref="login") Login
            li
              a(ui-sref="register") Sign up

    .container(ui-view="content")

    script(src="/bower_components/jquery/dist/jquery.js")
    script(src='/bower_components/bootstrap-sass/assets/javascripts/bootstrap.js')

    script(src="/bower_components/angular/angular.js")
    script(src="/bower_components/angular-sanitize/angular-sanitize.js")
    script(src="/bower_components/angular-ui-mask/dist/mask.js")
    script(src="/bower_components/angular-ui-router/release/angular-ui-router.js")
    script(src="/bower_components/fastclick/lib/fastclick.js")
    script(src="/bower_components/ngstorage/ngStorage.js")

    script(src='js/modules/writer.js')
    script(src='js/app.js')

    script(src='js/configs/auth.js')

    script(src='js/configs/states.js')
    script(src='js/configs/states/states.login.js')
    script(src='js/configs/states/states.register.js')
    script(src='js/configs/states/states.reset.js')

    script(src='js/filters/no-empty.js')

    script(src='js/controllers/login-controller.js')
    script(src='js/controllers/reset-controller.js')
    script(src='js/controllers/reset-confirm-controller.js')

    script(src='js/controllers/register-controller.js')

    script(src='js/controllers/library-controller.js')

    script(src='js/controllers/profile-controller.js')
    script(src='js/controllers/profile-edit-controller.js')

    script(src='js/controllers/user-controller.js')

    script(src='js/services/auth-service.js')
    script(src='js/services/user.js')
    script(src='js/services/utils.js')
