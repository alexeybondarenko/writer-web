div(ng-if="resp")
  div.alert.alert-success(ng-if="!isError")
    h1 Success
  div.alert.alert-warning(ng-if="isError")
    h1 Error
    div {{resp}}

form.form-signin(ng-submit="submit(form)", name="form")
  h2.form-signin-heading Please sign in
  label.sr-only(for='inputEmail') Email address
  input#inputEmail.form-control(type='email', placeholder='Email address', required='', autofocus='', ng-model="model.email")
  label.sr-only(for='inputPassword') Password
  input#inputPassword.form-control(type='password', placeholder='Password', required='', ng-model="model.password")
  button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
