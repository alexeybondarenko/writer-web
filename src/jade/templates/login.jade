div.alert.alert-warning(ng-if="error")
  h1 Error
  div {{error.data.message}}

.col-md-4.col-md-offset-4
  form(ng-submit="submit(form)", name="form")
    .form-group
      h2.text-center Please sign in
      br
    .form-group
      label.sr-only(for='inputEmail') Email address
      input#inputEmail.form-control(type='email', placeholder='Email address', required='', autofocus='', ng-model="model.email")
    .form-group
      label.sr-only(for='inputPassword') Password
      input#inputPassword.form-control(type='password', placeholder='Password', required='', ng-model="model.password")
    .form-group
      a(ui-sref="reset") Forgot password?
    .form-group
      col-sm-10
        button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
