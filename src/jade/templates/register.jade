div(ng-if="resp")
  div.alert.alert-success(ng-if="!isError")
    h1 Email has been sent to your email {{model.email}}
    p Check email and click on link
  div.alert.alert-warning(ng-if="isError")
    h1 Error
    div {{resp.data.message}}

.col-md-4.col-md-offset-4
  form(ng-submit="submit(form)", name="form")
    .form-group
      h2.text-center Register
      br
    .form-group
      label.sr-only(for='inputEmail') Email address
      input#inputEmail.form-control(type='email', placeholder='Email address', required='', autofocus='', ng-model="model.email")
    .form-group
      label.sr-only(for='inputPassword') Password
      input#inputPassword.form-control(type='password', placeholder='Password', required='', ng-model="model.password")
    .form-group
      a(ui-sref="login") Already registered?
    .form-group
      col-sm-10
        button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign up
